frame.ClipsDescendants = true
frame.Name = "MainFrame"

-- Hiá»‡u á»©ng bo gÃ³c + bÃ³ng
local corner = Instance.new("UICorner", frame)
corner.CornerRadius = UDim.new(0, 15)
local shadow = Instance.new("UIStroke", frame)
shadow.Color = Color3.fromRGB(80, 0, 200)
shadow.Thickness = 2.5

-- TiÃªu Ä‘á» BE HUB
local title = Instance.new("TextLabel", frame)
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundTransparency = 1
title.Text = "ğŸŒŒ BE HUB ğŸŒŒ"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(180, 100, 255)
title.TextStrokeTransparency = 0.7
title.TextStrokeColor3 = Color3.fromRGB(255, 255, 255)

-- Hiá»‡u á»©ng Ä‘á»•i mÃ u chá»¯ BE HUB
task.spawn(function()
	while true do
		title.TextColor3 = Color3.fromHSV(tick() % 5 / 5, 1, 1)
		task.wait(0.1)
	end
end)

-- TextBox nháº­p tá»‘c Ä‘á»™
local textbox = Instance.new("TextBox", frame)
textbox.Size = UDim2.new(0.8, 0, 0, 35)
textbox.Position = UDim2.new(0.1, 0, 0.45, 0)
textbox.PlaceholderText = "Nháº­p tá»‘c Ä‘á»™ (máº·c Ä‘á»‹nh 16)"
textbox.Font = Enum.Font.Gotham
textbox.TextSize = 16
textbox.BackgroundColor3 = Color3.fromRGB(40, 30, 60)
textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
Instance.new("UICorner", textbox).CornerRadius = UDim.new(0, 8)

-- NÃºt Chá»‰nh tá»‘c Ä‘á»™
local button = Instance.new("TextButton", frame)
button.Size = UDim2.new(0.6, 0, 0, 35)
button.Position = UDim2.new(0.2, 0, 0.75, 0)
button.Text = "ğŸš€ Chá»‰nh tá»‘c Ä‘á»™"
button.Font = Enum.Font.GothamBold
button.TextSize = 17
button.BackgroundColor3 = Color3.fromRGB(70, 40, 120)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
Instance.new("UICorner", button).CornerRadius = UDim.new(0, 10)

-- Hiá»‡u á»©ng hover
button.MouseEnter:Connect(function()
	button.BackgroundColor3 = Color3.fromRGB(100, 60, 180)
end)
button.MouseLeave:Connect(function()
	button.BackgroundColor3 = Color3.fromRGB(70, 40, 120)
end)

-- Chá»©c nÄƒng chá»‰nh tá»‘c Ä‘á»™
button.MouseButton1Click:Connect(function()
	local speed = tonumber(textbox.Text)
	if speed and speed > 0 then
		humanoid.WalkSpeed = speed
		button.Text = "âœ… ÄÃ£ Ä‘áº·t tá»‘c Ä‘á»™!"
		task.wait(1)
		button.Text = "ğŸš€ Chá»‰nh tá»‘c Ä‘á»™"
	else
		button.Text = "âš ï¸ Sai giÃ¡ trá»‹!"
		task.wait(1)
		button.Text = "ğŸš€ Chá»‰nh tá»‘c Ä‘á»™"
	end
end)
